<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Move"
 layout="topleft"
 left="102"
 name="move_panel"
 top="1"
 width="517">
  <icon
   follows="left|top"
   height="18"
   image_name="Cam_FreeCam_Off"
   layout="topleft"
   name="camera_icon"
   mouse_opaque="false"
   visible="true"
   width="18"
   left="10"
   top="5"/>
  <slider
   can_edit_text="true"
   control_name="CameraAngle"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1.57"
   layout="topleft"
   label_width="110"
   label="View angle"
   left_pad="15"
   max_val="2.97"
   min_val="0.17"
   name="camera_fov"
   show_text="true"
   width="243" />
  <slider
   can_edit_text="true"
   control_name="CameraOffsetScale"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1"
   layout="topleft"
   label="Distance"
   left_delta="0"
   label_width="110"
   max_val="3"
   min_val="0.5"
   name="camera_offset_scale"
   show_text="true"
   width="243"
   top_pad="4"/>
  <slider
   can_edit_text="true"
   control_name="ZoomTime"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.1"
   initial_value="1"
   layout="topleft"
   label="Zoom Time"
   left_delta="0"
   label_width="110"
   max_val="10"
   min_val="0.1"
   name="zoom_time"
   show_text="true"
   width="250"
   top_pad="5"/>
  <slider
   can_edit_text="true"
   control_name="CameraPositionSmoothing"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1"
   layout="topleft"
   label="Position Smoothing"
   left_delta="0"
   label_width="110"
   max_val="25"
   min_val="0.2"
   name="camera_position_smoothing"
   show_text="true"
   width="250"
   top_pad="5"/>
  <icon
   follows="left|top"
   height="18"
   image_name="Move_Walk_Off"
   layout="topleft"
   name="avatar_icon"
   mouse_opaque="false"
   visible="true"
   width="18"
   top_delta="30"
   left="10" />
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="35"
   name="keyboard_lbl"
   width="270"
   top_delta="0">
    Keyboard:
  </text>
  <check_box
   control_name="ArrowKeysAlwaysMove"
   follows="left|top"
   height="20"
   label="Arrow keys always move me"
   layout="topleft"
   left_delta="10"
   name="arrow_keys_move_avatar_check"
   width="237"
   top_pad="5"/>
   <check_box
   control_name="AlchemyMotionResetsCamera"
   follows="left|top"
   height="20"
   label="Moving resets camera"
   layout="topleft"
   left_delta="0"
   name="moving_resets_camera"
   width="237"
   top_pad="0"/>
  <check_box
   control_name="AllowTapTapHoldRun"
   follows="left|top"
   height="20"
   label="Tap-tap-hold to run"
   layout="topleft"
   left_delta="0"
   name="tap_tap_hold_to_run"
   width="237"
   top_pad="0"/>
  <check_box
   control_name="AutomaticFly"
   follows="left|top"
   height="20"
   label="Hold jump or crouch key to start or stop flying"
   layout="topleft"
   left_delta="0"
   name="automatic_fly"
   width="237"
   top_pad="0"/>
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="35"
   name="mouse_lbl"
   width="270"
   top_pad="15">
    Mouse:
  </text>
  <text
   type="string"
   length="1"
   follows="left|top"
   height="15"
   layout="topleft"
   left_delta="12"
   name="Mouse Sensitivity"
   top_pad="5"
   width="140"
   wrap="true">
    Mouselook sensitivity:
  </text>
  <slider
   control_name="MouseSensitivity"
   follows="left|top"
   height="15"
   initial_value="2"
   layout="topleft"
   show_text="false"
   left_pad="-14"
   max_val="15"
   name="mouse_sensitivity"
   top_delta="2"
   width="115" />
  <check_box
   control_name="InvertMouse"
   height="16"
   label="Invert"
   layout="topleft"
   left_pad="-2"
   name="invert_mouse"
   top_delta="0"
   width="128" />
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="48"
   name="single_click_action_lbl"
   width="120"
   top_pad="8">
    Single click on land:
  </text>
  <combo_box
   height="23"
   follows="left|top"
   layout="topleft"
   left_pad="10"
   top_delta="-2"
   name="single_click_action_combo"
   width="170">
    <combo_box.item
     label="No action"
     name="0"
     value="0"/>
    <combo_box.item
     label="Move to clicked point"
     name="1"
     value="1"/>
    <combo_box.commit_callback
     function="Pref.ClickActionChange"/>
  </combo_box>
  <text
   follows="left|top"
   type="string"
   length="1"
   height="10"
   layout="topleft"
   left="48"
   name="double_click_action_lbl"
   width="120"
   top_pad="8">
    Double click on land:
  </text>
  <combo_box
   height="23"
   follows="left|top"
   layout="topleft"
   left_pad="10"
   top_delta="-2"
   name="double_click_action_combo"
   width="170">
    <combo_box.item
     label="No action"
     name="0"
     value="0"/>
    <combo_box.item
     label="Move to clicked point"
     name="1"
     value="1"/>
    <combo_box.item
     label="Teleport to clicked point"
     name="2"
     value="2"/>
    <combo_box.commit_callback
     function="Pref.ClickActionChange"/>
  </combo_box>
  <button
   height="28"
   layout="topleft"
   follows="bottom|left|right"
   label="Joystick/Freecam configuration"
   left="35"
   name="joystick_setup_button"
   top_delta="20"
   width="305">
    <button.commit_callback
     function="Floater.Show"
     parameter="pref_joystick" />
  </button>
   <!-- Start Column #2 -->
  <text
  follows="left|top"
  layout="topleft"
  type="string"
  length="1"
  height="10"
  left="340"
  name="heading2"
  width="270"
  top="5">
    Automatic position for:
  </text>
  <check_box
   control_name="EditCameraMovement"
   height="20"
   follows="left|top"
   label="Build/Edit"
   layout="topleft"
   left_delta="10"
   name="edit_camera_movement"
   tool_tip="Use automatic camera positioning when entering and exiting edit mode"
   width="280"
   top_pad="5" />
  <check_box
   control_name="AppearanceCameraMovement"
   follows="left|top"
   height="16"
   label="Appearance"
   layout="topleft"
   name="appearance_camera_movement"
   tool_tip="Use automatic camera positioning while in edit mode"
   width="242"
   top_pad="2" />
  <text
   layout="topleft"
   follows="left|top"
   type="string"
   length="1"
   height="10"
   left="340"
   name="camera_constraints_label"
   width="270">
   Camera constraints:
  </text>
  <check_box
   control_name="DisableCameraConstraints"
   height="20"
   follows="left|top"
   label="Disable constraints"
   layout="topleft"
   left_delta="10"
   name="DisableCameraConstraints"
   tool_tip="Disabling this removes the zoom and object collision on camera"
   width="280"
   top_pad="5" />
  <check_box
   control_name="AlchemyDisableMinZoomDist"
   height="16"
   follows="left|top"
   label="Disable minimum zoom"
   layout="topleft"
   name="AlchemyDisableMinZoomDist"
   tool_tip="Disabling this removes the minimum zoom constraint on the camera"
   width="280"
   top_pad="2" />
  <check_box
   control_name="AlchemyDisableSimCamConstraint"
   follows="left|top"
   height="16"
   label="Disable object push"
   layout="topleft"
   name="AlchemyDisableSimCamConstraint"
   tool_tip="Disable the push the simulator applies when camera collides with objects"
   width="242"
   top_pad="2" />
  <text
   layout="topleft"
   follows="left|top"
   type="string"
   length="1"
   height="10"
   left="340"
   name="move_it_label"
   width="270">
   Movement:
  </text>
  <check_box
   control_name="AlchemyFlyEnableAlways"
   height="16"
   follows="left|top"
   label="Always allow flight"
   layout="topleft"
   left_delta="10"
   name="AlchemyFlyEnableAlways"
   tool_tip="Keep in mind that abusing this ability can leave you at risk of being banned"
   width="280"
   top_pad="8" />
  <check_box
   control_name="AlchemySitOnAway"
   height="16"
   follows="left|top"
   label="Sit while Away"
   layout="topleft"
   left_delta="0"
   name="AlchemySitOnAway"
   tool_tip="Sit down when in away mode"
   width="280"
   top_pad="2" />
  <check_box
   control_name="AlchemyMoonwalk"
   height="16"
   follows="left|top"
   label="Moonwalk"
   layout="topleft"
   left_delta="0"
   name="AlchemyMoonwalk"
   tool_tip="Don't turn around while walking backwards"
   width="280"
   top_pad="2" />
  <check_box
   control_name="AlchemyNimble"
   height="16"
   follows="left|top"
   label="Nimble"
   layout="topleft"
   left_delta="0"
   name="AlchemyNimble"
   tool_tip="Don't run certain animations, such as landing to appear more nimble"
   width="280"
   top_pad="2" />
  <check_box
   control_name="AlchemyAvatarClickFocus"
   height="16"
   follows="left|top"
   label="Avatar Click Focus"
   layout="topleft"
   left_delta="0"
   name="ClickFocus"
   tool_tip="Focus the camera on your avatar when clicked"
   width="280"
   top_pad="2" />
   <!-- End Column #2 -->
</panel>
