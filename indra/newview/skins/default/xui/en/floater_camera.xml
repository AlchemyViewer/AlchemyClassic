<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 positioning="specified"
 right="-460"
 bottom="-50"
 follows="left|bottom"
 legacy_header_height="0"
 header_height="0"
 can_minimize="false"
 can_close="true"
 height="86"
 layout="topleft"
 name="camera_floater"
 help_topic="camera_floater"
 save_visibility="true"
 single_instance="true"
 chrome="true"
 save_rect="true"
 width="210">
    <floater.string
     name="rotate_tooltip">
        Rotate Camera Around Focus
    </floater.string>
    <floater.string
     name="zoom_tooltip">
        Zoom Camera Towards Focus
    </floater.string>
    <floater.string
     name="move_tooltip">
        Move Camera Up and Down, Left and Right
    </floater.string>
    <floater.string
     name="free_mode_title">
        View Object
    </floater.string>
    <icon
     layout="topleft"
     left="0"
     width="6"
     name="drag"
     image_name="Dragbar"
     top="1"
     bottom="-1" />
    <panel
     border="false"
     height="84"
     layout="topleft"
     left_pad="0"
     top="1"
     name="buttons"
     width="23">
        <button
         height="21"
         label=""
         layout="topleft"
         left="0"
         is_toggle="true"
         image_overlay="Conv_toolbar_collapse"
         image_selected="PushButton_Selected_Press"
         name="collapse_btn"
         tab_stop="false"
         tool_tip="Collapse"
         top="0"
         width="23" />
        <button
         height="21"
         label=""
         layout="topleft"
         left_delta="0"
         is_toggle="true"
         image_overlay="Cam_Avatar_Off"
         image_selected="PushButton_Selected_Press"
         name="presets_btn"
         tab_stop="false"
         tool_tip="Preset Views"
         top_pad="0"
         width="23" />
        <button
         height="21"
         label=""
         layout="topleft"
         top_pad="0"
         left_delta="0"
         is_toggle="true"
         image_overlay="PanOrbit_Off"
         image_selected="PushButton_Selected_Press"
         name="pan_btn"
         tab_stop="false"
         tool_tip="Orbit Zoom Pan"
         width="23" />
        <button
         height="21"
         label=""
         layout="topleft"
         top_pad="0"
         left_delta="0"
         image_overlay="Cam_FreeCam_Off"
         image_selected="PushButton_Selected_Press"
         name="avatarview_btn"
         tab_stop="false"
         tool_tip="Camera modes"
         width="23" />
    </panel>
    <panel
     border="false"
     height="85"
     layout="topleft"
     left_pad="1"
     top="0"
     mouse_opaque="false"
     name="controls"
     width="179">
       <panel
         color="Transparent"
         follows="all"
         height="85"
         layout="topleft"
         left="1"
         name="preset_views_list"
         opaque="true"
         top="0"
         width="179"
         visible="false">
        <panel_camera_item
          name="front_view"
          height="20">
          <panel_camera_item.mousedown_callback
            function="CameraPresets.ChangeView"
            parameter="front_view" />
          <panel_camera_item.picture
            image_name="Cam_Preset_Front_Off" />
          <panel_camera_item.selected_picture
            image_name="Cam_Preset_Front_On" />
          <panel_camera_item.text
            name="front_view_text">
            Front View
          </panel_camera_item.text>
        </panel_camera_item>
        <panel_camera_item
          name="group_view"
          height="20"
          top_pad="0">
          <panel_camera_item.mousedown_callback
            function="CameraPresets.ChangeView"
            parameter="group_view" />
          <panel_camera_item.picture
            image_name="Cam_Preset_Side_Off" />
          <panel_camera_item.selected_picture
            image_name="Cam_Preset_Side_On" />
          <panel_camera_item.text
            name="side_view_text">
            Side View
          </panel_camera_item.text>
        </panel_camera_item>
        <panel_camera_item
          name="shoulder_view"
          height="20"
          top_pad="0">
          <panel_camera_item.mousedown_callback
            function="CameraPresets.ChangeView"
            parameter="shoulder_view" />
          <panel_camera_item.picture
            image_name="Cam_Preset_Side_Off" />
          <panel_camera_item.selected_picture
            image_name="Cam_Preset_Side_On" />
          <panel_camera_item.text
            name="side_view_text">
            Shoulder View
          </panel_camera_item.text>
        </panel_camera_item>
        <panel_camera_item
          name="rear_view"
          layout="topleft"
          height="20"
          top_pad="0">
          <panel_camera_item.mousedown_callback
            function="CameraPresets.ChangeView"
            parameter="rear_view" />
          <panel_camera_item.picture
            image_name="Cam_Preset_Back_Off" />
          <panel_camera_item.selected_picture
            image_name="Cam_Preset_Back_On" />
          <panel_camera_item.text
            name="rear_view_text">
            Rear View
          </panel_camera_item.text>
        </panel_camera_item>
      </panel>
      <panel
       color="Transparent"
       follows="all"
       height="68"
       item_pad="4"
       layout="topleft"
       left="1"
       name="camera_modes_list"
       opaque="true"
       top="0"
       width="179"
       visible="false">
        <panel_camera_item
          name="object_view">
          <panel_camera_item.mousedown_callback
            function="CameraPresets.ChangeView"
            parameter="object_view" />
          <panel_camera_item.text
            name="object_view_text">
            Object View
          </panel_camera_item.text>
          <panel_camera_item.picture
            image_name="Object_View_Off" />
          <panel_camera_item.selected_picture
            image_name="Object_View_On" />
        </panel_camera_item>
        <panel_camera_item
          name="mouselook_view"
          layout="topleft">
          <panel_camera_item.mousedown_callback
            function="CameraPresets.ChangeView"
            parameter="mouselook_view" />
          <panel_camera_item.text
            name="mouselook_view_text">
            Mouselook View
          </panel_camera_item.text>
          <panel_camera_item.picture
            image_name="MouseLook_View_Off" />
          <panel_camera_item.selected_picture
            image_name="MouseLook_View_On" />
        </panel_camera_item>
      </panel>
         <!--TODO: replace + - images -->
         <panel
            border="false"
            class="camera_zoom_panel"
            height="84"
            layout="topleft"
            left="0"
            mouse_opaque="false"
            name="zoom"
            top="0"
            width="179"
            visible="true">
           <joystick_rotate
              follows="top|left"
              height="78"
              layout="topleft"
              left="0"
              name="cam_rotate_stick"
              quadrant="left"
              sound_flags="3"
              visible="true"
              tool_tip="Orbit camera around focus"
              top="5"
              width="78" />                      
           <button
              follows="top|left"
              height="18"
              image_disabled="AddItem_Disabled"
              image_selected="AddItem_Press"
              image_unselected="AddItem_Off"
              layout="topleft"
              left_pad="1"
              name="zoom_plus_btn"
              width="18"
              top="3">
             <commit_callback
                function="Zoom.plus" />
             <mouse_held_callback
                function="Zoom.plus" />
           </button>
           <slider_bar
              height="42"
              layout="topleft"
              name="zoom_slider"
              orientation="vertical"
              tool_tip="Zoom camera toward focus"
              top_pad="0"
              min_val="0"
              max_val="1" 
              width="18">
             <commit_callback function="Slider.value_changed"/>
           </slider_bar>
           <button
              follows="top|left"
              height="18"
              image_disabled="MinusItem_Disabled"
              image_selected="MinusItem_Press"
              image_unselected="MinusItem_Off"
              layout="topleft"
              name="zoom_minus_btn"
              top_pad="0"
              width="18">
             <commit_callback
                function="Zoom.minus" />
             <mouse_held_callback
                function="Zoom.minus" />
           </button>
         <joystick_track
         follows="top|left"
         height="78"
         image_selected="Cam_Tracking_In"
         image_unselected="Cam_Tracking_Out"
         layout="topleft"
         left_pad="1"
         name="cam_track_stick"
         quadrant="left"
         scale_image="false"
         sound_flags="3"
         tool_tip="Move camera up and down, left and right"
         top="5"
         width="78"/>
        </panel>
    </panel>
</floater>
