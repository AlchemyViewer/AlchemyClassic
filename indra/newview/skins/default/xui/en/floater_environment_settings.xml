<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 height="228"
 layout="topleft"
 name="Environment Editor Floater"
 help_topic="environment_editor_floater"
 save_rect="true"
 title="ENVIRONMENT SETTINGS"
 width="440">

 <text
  follows="top|left|right"
  height="15"
  layout="topleft"
  left="10"
  name="note"
  top="25"
  width="430"
  wrap="true">
  Use the options below to customize the environment settings for your viewer.
 </text>

 <radio_group
  follows="top|left"
  height="35"
  layout="topleft"
  left_delta="0"
  name="region_settings_radio_group"
  top_delta="25"
  width="200">
    <radio_item
  	 label="Use region settings"
  	 layout="topleft"
  	 name="use_region_settings"/>
    <radio_item
  	 label="Customize my environment"
  	 layout="topleft"
  	 name="use_my_settings"
  	 top_pad="10"/>
  </radio_group>

 <panel
  height="105"
  layout="topleft"
  left="20"
  name="user_environment_settings"
  top_pad="0"
  width="370">

 <!-- Water Setting -->
 <text
  name="water_settings_title"
  follows="top|left"
  height="16"
  layout="topleft"
  left="5"
  top="10"
  width="152">
  		Water Setting
  </text>
  <combo_box
   follows="top|left"
   left_pad="0"
   name="water_settings_preset_combo"
   top_delta="-5"
   width="200">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
  </combo_box>
 

 <!-- Sky/Day Cycle Settings -->  
  <radio_group
   layout="topleft"
   left="5"
   name="sky_dayc_settings_radio_group"
   top_pad="10"
   height="50"
   width="150">
  	<radio_item
  	 layout="topleft"
  	 label="Fixed sky"
  	 name="my_sky_settings"/>
  	<radio_item
  	 layout="topleft"
  	 label="Day cycle"
  	 name="my_dayc_settings"
  	 top_pad="13"/>  	
  </radio_group>
  <combo_box
   follows="top|left"
   left_pad="2"
   name="sky_settings_preset_combo"
   top_delta="-8"
   width="200">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
  </combo_box>
  <combo_box
   follows="top|left"
   name="dayc_settings_preset_combo"
   top_delta="25"
   width="200">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
  </combo_box>
 <text
  follows="top|left|right"
  font="SansSerifItalic"
  height="15"
  layout="topleft"
  left="5"
  name="note"
  top_pad="5"
  width="360"
  wrap="true">
  Note: your custom settings will not be visible to other users.
 </text>
  </panel>

  <button
   follows="left|top"
   height="23"
   label="OK"
   layout="topleft"
   right="-130"
   name="ok_btn"
   top_pad="10"
   width="100" />
  <button
   follows="left|top"
   height="23"
   label="Cancel"
   layout="topleft"
   left_pad="10"
   name="cancel_btn"
   width="100" />	
</floater>
