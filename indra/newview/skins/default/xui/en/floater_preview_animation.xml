<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 height="85"
 layout="topleft"
 name="preview_anim"
 help_topic="preview_anim"
 width="280">
    <floater.string
     name="Title">
        Animation: [NAME]
    </floater.string>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="19"
     layout="topleft"
     left="10"
     name="desc txt"
     top="25"
     width="80">
        Description:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     follows="left|top|right"
     font="SansSerifSmall"
     height="19"
     layout="topleft"
     left_delta="95"
     max_length_bytes="127"
     name="desc"
     top="19"
     width="170" />
    <button
     height="20"
     label="Play Inworld"
     label_selected="Stop"
     layout="topleft"
     left="10"
     name="Inworld"
     tool_tip="Play this animation so that others can see it"
     top="47"
     width="125">
       <button.commit_callback
        function="PreviewAnim.Play"
        parameter="Inworld" /> 
    </button>
    <button
     height="20"
     label="Play Locally"
     label_selected="Stop"
     layout="topleft"
     left_pad="5"
     name="Locally"
     tool_tip="Play this animation so that only you can see it"
     top_delta="0"
     width="125">
       <button.commit_callback
        function="PreviewAnim.Play"
        parameter="Locally" /> 
    </button>
</floater>
