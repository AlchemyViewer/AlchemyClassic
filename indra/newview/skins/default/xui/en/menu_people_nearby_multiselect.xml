<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<context_menu
 layout="topleft"
 name="Multi-Selected People Context Menu">
    <menu_item_call
     enabled="false"
     label="Add Friends"
     layout="topleft"
     name="add_friends">
        <on_click
         function="Avatar.AddFriends" />
        <on_enable
         function="Avatar.EnableItem"
         parameter="can_add" />
    </menu_item_call>
    <menu_item_call
     label="Remove Friends"
     layout="topleft"
     name="remove_friends">
        <menu_item_call.on_click
         function="Avatar.RemoveFriend" />
        <menu_item_call.on_enable
         function="Avatar.EnableItem"
         parameter="can_delete" />
    </menu_item_call>
    <menu_item_call
     label="IM"
     layout="topleft"
     name="im">
        <on_click
         function="Avatar.IM" />
    </menu_item_call>
    <menu_item_call
     enabled="false"
     label="Call"
     layout="topleft"
     name="call">
        <on_click
         function="Avatar.Call" />
        <on_enable
         function="Avatar.EnableItem"
         parameter="can_call" />
    </menu_item_call>
    <menu_item_call
     enabled="false"
     label="Share"
     layout="topleft"
     name="share">
        <on_click
         function="Avatar.Share" />
    </menu_item_call>
    <menu_item_call
     enabled="false"
     label="Pay"
     layout="topleft"
     name="pay">
        <on_click
         function="Avatar.Pay" />
    </menu_item_call>
    <menu_item_call
    label="Offer Teleport"
    name="offer_teleport">
      <menu_item_call.on_click
       function="Avatar.OfferTeleport"/>
      <menu_item_call.on_enable
      function="Avatar.EnableItem"
      parameter="can_offer_teleport"/>
    </menu_item_call>
    <menu_item_separator name="separator_utilities" />
    <menu
    label="Manage"
    name="manage_menu">
    <menu_item_call
         label="Freeze"
         name="freeze">
        <menu_item_call.on_click
         function="Avatar.Freeze" />
        <menu_item_call.on_visible
         function="Avatar.EnableFreezeEject"/>
    </menu_item_call>
    <menu_item_call
         label="Eject"
         name="eject">
        <menu_item_call.on_click
         function="Avatar.Eject" />
        <menu_item_call.on_visible
         function="Avatar.EnableFreezeEject"/>
    </menu_item_call>
    <menu_item_call
         label="Teleport Home"
         name="estate_tphome">
        <menu_item_call.on_click
         function="Avatar.EstateTPHome" />
        <menu_item_call.on_visible
         function="Avatar.EnableEstateManage"/>
    </menu_item_call>
    <menu_item_call
         label="Estate Kick"
         name="estate_kick">
        <menu_item_call.on_click
         function="Avatar.EstateKick" />
        <menu_item_call.on_visible
         function="Avatar.EnableEstateManage"/>
    </menu_item_call>
    <menu_item_call
         label="Estate Ban"
         name="estate_ban">
        <menu_item_call.on_click
         function="Avatar.EstateBan" />
        <menu_item_call.on_visible
         function="Avatar.EnableEstateManage"/>
    </menu_item_call>
    </menu>
    <menu
     label="Tools"
     name="tools_menu">
    <menu_item_call
     label="Copy Names"
     layout="topleft"
     name="copy_name">
        <menu_item_call.on_click
         function="Avatar.CopyName" />
    </menu_item_call>
    <menu_item_call
     label="Copy SLURLs"
     layout="topleft"
     name="copy_slurl">
        <menu_item_call.on_click
         function="Avatar.CopySLURL" />
    </menu_item_call>
    <menu_item_call
     label="Copy Keys"
     layout="topleft"
     name="copy_uuid">
        <menu_item_call.on_click
         function="Avatar.CopyKey" />
    </menu_item_call>
    </menu>
  <menu
   label="Tag Color"
   name="tag_color">
    <menu_item_call
     label="Color 1"
     name="Color 1"
     enabled_color="AvatarCustomColor1">
      <menu_item_call.on_click
      function="Avatar.Colorize"
      parameter="color1" />
    </menu_item_call>
    <menu_item_call
     label="Color 2"
     name="Color 2"
     enabled_color="AvatarCustomColor2">
      <menu_item_call.on_click
      function="Avatar.Colorize"
      parameter="color2" />
    </menu_item_call>
    <menu_item_call
     label="Color 3"
     name="Color 3"
     enabled_color="AvatarCustomColor3">
      <menu_item_call.on_click
      function="Avatar.Colorize"
      parameter="color3" />
    </menu_item_call>
    <menu_item_call
     label="Color 4"
     name="Color 4"
     enabled_color="AvatarCustomColor4">
      <menu_item_call.on_click
      function="Avatar.Colorize"
      parameter="color4" />
    </menu_item_call>
    <menu_item_separator />
    <menu_item_call
     label="Clear Color"
     name="clear_color">
      <menu_item_call.on_click
      function="Avatar.Colorize"
      parameter="clear" />
    </menu_item_call>
  </menu>
</context_menu>
