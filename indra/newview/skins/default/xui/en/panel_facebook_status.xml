    <panel
	 height="400"
	 width="304"
     follows="all"
	 layout="topleft"
     name="panel_facebook_status">
     <layout_stack
      layout="topleft"
      border_size="0"
      height="392"
      follows="all"
      orientation="vertical"
      name="stack_status"
      top="8">
      <layout_panel
       name="status_detail_panel"
       height="367">
       <text
        length="1"
        follows="top|left|right"
        font="SansSerif"
        height="16"
        left="9"
        name="status_caption_label"
        top="13"
        type="string">
        What's on your mind?
       </text>
       <text_editor
        follows="left|top|right"
        height="150"
        width="250"
        left="9"
        length="1"
        max_length="700"
        name="status_message"
        type="string"
        word_wrap="true">
       </text_editor>
      </layout_panel>
      <layout_panel
       name="status_button_panel"
       height="25">
       <button
        follows="left|bottom"
        top="0"
        left="9"
        height="23"
        label="Post"
        name="post_status_btn"
        width="100">
        <button.commit_callback
          function="SocialSharing.SendStatus" />
       </button>
       <button
        follows="left|bottom"
        height="23"
        label="Cancel"
        name="cancel_status_btn"
        left_pad="15"
        top_delta="0"
        width="100">
        <button.commit_callback
          function="SocialSharing.Cancel" />
       </button>
      </layout_panel>
     </layout_stack>
    </panel>
