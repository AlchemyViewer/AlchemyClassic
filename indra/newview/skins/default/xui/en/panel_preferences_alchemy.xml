<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Communication"
 layout="topleft"
 left="102"
 name="im"
 top="1"
 width="517">
<tab_container
 label="Alchemy"
 layout="topleft"
 follows="all"
 top="5"
 bottom="-10"
 left="1"
 right="-1"
 name="tabs"
 tab_min_width="50"
 tab_position="top" >
    <panel
     border="false"
     follows="all"
     label="LookAt"
     layout="topleft"
     mouse_opaque="false"
     name="LookAt"
     top="16"
     width="280">     
        <check_box
         top="10"
         follows="left|top"
         height="16"
         label="Show look at targets"
         left="15"
         name="showlookat"
         width="270"
         control_name="AlchemyLookAtShow"
         tool_tip="Enable crosshairs marking where people are looking."/>
        <text
         type="string"
         length="1"
         follows="left|top"
         height="15"
         layout="topleft"
         left="180"
         name="lookatnames"
         tool_tip="Select whether to show avatar names on the LookAt crosshairs"
         top="10"
         width="50">
            Names:
        </text>
        <combo_box
         control_name="AlchemyLookAtNames"
         follows="left|top"
         height="23"
         layout="topleft"
         top="5"
         left_pad="0"
         max_chars="135"
         name="lookatshownames_combobox"
         width="150">
            <combo_box.item
             enabled="true"
             label="None"
             name="None"
             value="0" />
            <combo_box.item
             enabled="true"
             label="Complete name"
             name="Complete_Name"
             value="1" />
            <combo_box.item
             enabled="true"
             label="Display name"
             name="Display_Name"
             value="2" />
            <combo_box.item
             enabled="true"
             label="Legacy name"
             name="Legacy_Name"
             value="3" />
            <combo_box.item
             enabled="true"
             label="Username"
             name="User_Name"
             value="4" />
        </combo_box>

        <check_box
         control_name="AlchemyLookAtLines"
         height="16"
         label="Show a line from look at beacon to avatar"
         layout="topleft"
         left="15"
         name="lineslookat"
         tool_tip="See a line connecting the camera focus point to the avatar. Useful to find where they are."
         top_pad="4"
         width="350" />

        <text
         type="string"
         length="1"
         follows="left|top"
         height="15"
         layout="topleft"
         left="15"
         name="mylookat"
         top_pad="10"
         width="200">
            My LookAt:
        </text>
	    	<check_box
         control_name="AlchemyLookAtHideSelf"
         height="16"
		     initial_value="true"
         label="Don't show me my lookat target"
         layout="topleft"
         left="15"
         name="LookAtHideOwn"
		     tool_tip="Don't show me my own camera crosshairs"
         top_pad="10"
         width="350" />

        <check_box
         control_name="AlchemyLookAtPrivate"
         height="16"
         label="Don't send my actual camera target to others"
         layout="topleft"
         left="15"
         name="privatelookat"
	    	 tool_tip="Disable your camera focus point from showing to others"
         top_pad="4"
         width="350" />

         <check_box
         control_name="AlchemyLookAtPrivateLocal"
         enabled_control="AlchemyLookAtPrivate"
         height="16"
         label="Don't set any camera target hint at all"
         layout="topleft"
         left="15"
         name="privatelookat"
         tool_tip="Disables setting any camera target for yourself(Disables movement of avatar head and eyes)"
         top_pad="4"
         width="350" />

        <check_box
         control_name="AlchemyPointAtDisable"
         height="16"
         label="Don't send my selection target hints"
         layout="topleft"
         name="privatepointat"
		     tool_tip="Prevents your selection point from showing to others"
         top_pad="4"
         width="350" />
    </panel>
<!--Alchemy Command Line-->
  <panel
      top_pad="5"
      bottom="-1"
      left="1"
      right="-1"
      follows="all"
      label="Chat Commands"
      name="CommandLineTab" >
    <check_box
      top="10"
      follows="left|top"
      height="16"
      label="Enable chat bar commands"
      left="5"
      name="chat_cmd_toggle"
      width="270"
      control_name="AlchemyChatCommandEnable"/>.
    <!--Draw Distance-->
    <text
      top_pad="5"
      follows="left|top"
      height="16"
      name="AlchemyChatCommandDrawDistance_txt"
      width="250">
      Change Draw Dist (usage: cmd meters)
    </text>
    <line_editor
      top_pad="0"
      follows="left|top"
      height="20"
      max_length_chars="256"
      name="AlchemyChatCommandDrawDistance"
      tool_tip=""
      control_name="AlchemyChatCommandDrawDistance"
      width="200"/>
    <!--Ground-->
    <text
      top_pad="5"
      follows="left|top"
      height="16"
      name="AlchemyChatCommandGround_txt"
      width="250">
      Teleport to ground
    </text>
    <line_editor
      top_pad="0"
      follows="left|top"
      height="20"
      max_length_chars="256"
      name="AlchemyChatCommandGround"
      tool_tip=""
      control_name="AlchemyChatCommandGround"
      width="200"/>
    <!--Rez Platform-->
    <text
      top_pad="5"
      follows="left|top"
      height="16"
      name="AlchemyChatCommandRezPlat_txt"
      width="250">
      Rez a platform (usage: cmd 0 - 30)
    </text>
    <line_editor
      top_pad="0"
      follows="left|top"
      height="20"
      max_length_chars="256"
      name="AlchemyChatCommandRezPlat"
      tool_tip=""
      control_name="AlchemyChatCommandRezPlat"
      width="200"/>
    <slider
      top_pad="4"
      name="AlchemyChatCommandRezPlatSize"
      control_name="AlchemyChatCommandRezPlatSize"
      decimal_digits="1"
      follows="left|top"
      height="18"
      increment="0.5"
      initial_value="20"
      label="Width"
      label_width="30"
      max_val="30"
      min_val="5"
      show_text="true"
      width="200"
      tool_tip="How big do you want the platform to appear to be?"/>

    <view_border
      bevel_style="none"
      border_thickness="0"
      top="25"
      left="240"
      bottom="-25"
      width="0"
      follows="top|left|bottom"
      name="EmDivisor"/>
    <!--key2name-->
    <text
      top="25"
      follows="left|top"
      height="16"
      left_delta="10"
      name="AlchemyChatCommandHeight_txt"
      width="270">
      Teleport to specified height (0-8191)
    </text>
    <line_editor
      top_pad="0"
      follows="left|top"
      height="20"
      max_length_chars="256"
      name="AlchemyChatCommandHeight"
      tool_tip=""
      control_name="AlchemyChatCommandHeight"
      width="200"/>
    <!--cao-->
    <text
      top_pad="5"
      follows="left|top"
      height="16"
      name="AlchemyChatCommandHome_txt"
      width="250">
      Teleport Home
    </text>
    <line_editor
      top_pad="0"
      follows="left|top"
      height="20"
      max_length_chars="256"
      name="AlchemyChatCommandHome"
      tool_tip=""
      control_name="AlchemyChatCommandHome"
      width="200"/>
  </panel>

  </tab_container>
</panel>
