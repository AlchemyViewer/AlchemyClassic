<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Interface Settings"
 layout="topleft"
 left="102"
 name="interface Panel"
 top="1"
 width="517">
<!-- Placeholder -->
  <tab_container
    layout="topleft"
    follows="all"
    top="5"
    bottom="-1"
    name="tab_container"
    tab_min_width="50"
    tab_position="top">
   <panel
       label="General"
       border="false"
       height="380"
       layout="topleft"
       top="0"
       left="13"
       width="517"
       name="general_ui_tab">
      <check_box
            follows="left|top"
            height="16"
            label="Show Hover Tips"
            tool_tip="Show descriptive tooltip when mouse hovers over items in world"
            left="7"
            top_pad="20"
            name="show_hover_tips"
            width="275"
            control_name="ShowHoverTips"/>
    </panel>
    <panel
        label="Inventory"
        border="false"
        height="380"
        layout="topleft"
        top="0"
        left="13"
        width="517"
        name="inventory_tab">
       <check_box
             follows="left|top"
             height="16"
             label="Enable &quot;Paste as Link&quot;"
             tool_tip="Enable ability to create links to folders and items via &quot;Paste as link.&quot;"
             left="7"
             top_pad="10"
             name="inventory_linking"
             width="275"
             control_name="InventoryLinking"/>
       <check_box
             follows="left|top"
             height="16"
             label="Hide empty system folders when on"
             tool_tip="Prevents visual clutter if you don't use the system folders to sort your inventory"
             left="7"
             top_pad="10"
             name="hide_empty_folders"
             width="275"
             control_name="DebugHideEmptySystemFolders"/>
   </panel>
   <panel
        label="Status Bar"
        border="false"
        height="380"
        layout="topleft"
        top="0"
        left="13"
        width="517"
        name="statusbar_tab">
        <check_box
             follows="left|top"
             height="16"
             label="Show seconds in clock"
             left="7"
             top_pad="10"
             name="precise_clock"
             width="275"
             control_name="AlchemyPreciseClock"/>
   </panel>
  </tab_container>
</panel>
