<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Interface Settings"
 layout="topleft"
 left="102"
 name="interface Panel"
 top="1"
 width="517">
<!-- Placeholder -->
  <tab_container
    layout="topleft"
    follows="all"
    top="5"
    bottom="-1"
    name="tab_container"
    tab_min_width="50"
    tab_position="top">
   <panel
       label="Toasts &amp; Pop-ups"
       border="false"
       height="380"
       layout="topleft"
       top="0"
       left="13"
       width="517"
       name="toasts_tab">
      <text
        left="10"
        top_pad="10"
        follows="top|left"
        layout="topleft"
        width="150"
        use_ellipses="false"
        name="test_text"
        tool_tip="text">
         Nearby Chat toast width:
      </text>
      <spinner
        left_pad="10"
        top="6"
        height="10"
        width="55"
        decimal_digits="0"
        increment="1"
        min_val="300"
        max_val="1500"
        follows="top|left"
        layout="topleft"
        name="alchemynearbychattoastwidth"
        control_name="AlchemyNearbyChatToastWidth"
        tool_tip="Controls the width of the nearby chat toast (pop-up)"/>
      <check_box
            follows="left|top"
            height="16"
            label="Show Hover Tips"
            tool_tip="Show descriptive tooltip when mouse hovers over items in world"
            left="7"
            top_pad="20"
            name="show_hover_tips"
            width="275"
            control_name="ShowHoverTips"/>
    </panel>
    <panel
        label="Features"
        border="false"
        height="380"
        layout="topleft"
        top="0"
        left="13"
        width="517"
        name="features_tab">
       <check_box
             follows="left|top"
             height="16"
             label="Enable &quot;Paste as Link&quot;"
             tool_tip="Enable ability to create links to folders and items via &quot;Paste as link.&quot;"
             left="7"
             top_pad="10"
             name="inventory_linking"
             width="275"
             control_name="InventoryLinking"/>
       <check_box
             follows="left|top"
             height="16"
             label="Hide empty system folders when on"
             tool_tip="Prevents visual clutter if you don't use the system folders to sort your inventory"
             left="7"
             top_pad="10"
             name="hide_empty_folders"
             width="275"
             control_name="DebugHideEmptySystemFolders"/>
  <!-- </panel> -->
  </tab_container>
</panel>
