<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_opaque="true"
 background_visible="true"
 bg_opaque_color="DkGray"
 chrome="true"
 follows="top|right"
 height="19"
 layout="topleft"
 left="0"
 mouse_opaque="false"
 name="status"
 top="19"
 tab_stop="false"
 width="1000">
    <panel.string
     name="packet_loss_tooltip">
        Packet Loss
    </panel.string>
    <panel.string
     name="bandwidth_tooltip">
        Bandwidth
    </panel.string>
    <panel.string
     name="time">
        [hour12, datetime, slt]:[min, datetime, slt] [ampm, datetime, slt] [timezone,datetime, slt]
    </panel.string>
    <panel.string
     name="timePrecise">
        [hour12, datetime, slt]:[min, datetime, slt]:[second, datetime, slt] [ampm, datetime, slt] [timezone,datetime, slt]
    </panel.string>
    <panel.string
     name="timeTooltip">
        [weekday, datetime, slt], [day, datetime, slt] [month, datetime, slt] [year, datetime, slt]
    </panel.string>
	<panel.string
     name="buycurrencylabel">
        L$ [AMT]
    </panel.string>
<layout_stack
 animate="true"
 layout="topleft"
 orientation="horizontal"
 height="18"
 left="-424"
 width="424"
 top="0"
 follows="right|top"
 name="status_ls">
  <layout_panel
   auto_resize="true"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="left_pad_lp"
   width="1" />
  <layout_panel
   visibility_control="ShowStatusBarCurrency"
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="currency_balance_panel"
   width="60">
    <text
     halign="right"
     font="SansSerifSmall"
     follows="all"
     height="18"
     left="0"
     right="58"
     name="balance"
     tool_tip="Click to refresh your L$ balance"
     v_pad="2"
     top="0"
     wrap="false" 
     value="L$ --"
     width="60" />
  </layout_panel>
  <layout_panel
   visibility_control="ShowStatusBarBuyCurrency"
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="buy_currency_lp"
   width="60">
    <button
     halign="center"
     font="SansSerifSmall"
     follows="right|top|bottom"
     image_hover_unselected="PushButton_Over"
     image_unselected="PushButton_Off"
     image_pressed="PushButton_Press"
     height="18"
     label="Buy L$"
     left="0"
     label_shadow="true"
     name="buyL"
     pad_right="0"
     tool_tip="Click to buy more L$"
     top="0"
     width="60" />
  </layout_panel>
  <layout_panel
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="time_lp"
   width="213">
    <text
     type="string"
     font="SansSerifSmall"
     text_readonly_color="TimeTextColor"
     follows="right|top"
     halign="right"
     height="16"
     top="2"
     layout="topleft"
     left="0"
     name="TimeText"
     tool_tip="Current time (Pacific)"
     width="135">
        24:00 AM PST
    </text>
    <button
     follows="right|top"
     height="16"
     image_selected="Play_Off"
     image_unselected="Pause_Off"
     image_pressed="Pause_Press"
     image_pressed_selected="Play_Press"
     is_toggle="true"
     left_pad="0"
     top="2"
     name="media_toggle_btn"
     tool_tip="Start/Stop All Media (Music, Video, Web pages)"
     width="16" >
    </button>
    <button
     follows="right|top"
     height="16"
     image_selected="AudioMute_Off"
     image_pressed="Audio_Press"
     image_unselected="Audio_Off"
     is_toggle="true"
     left_pad="5"
     top="2"
     name="volume_btn"
     width="16" />
    <button
     follows="right|top"
     height="16"
     image_selected="Icon_Gear_Background"
     image_pressed="Icon_Gear_Background"
     image_unselected="Icon_Gear_Foreground"
     left_pad="5"
     top="2"
     name="quick_settings_btn"
     width="16">
     <click_callback
      function="Floater.ToggleOrBringToFront"
      parameter="quick_settings" />
    </button>
    <button
     follows="right|top"
     height="16"
     image_selected="Move"
     image_unselected="Move_Off"
     is_toggle="true"
     left_pad="5"
     top="2"
     name="ao_btn"
     width="16" />
  </layout_panel>
  <layout_panel
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="flycam_lp"
   width="18">
    <icon
     height="18"
     width="18"
     image_name="Flycam"
     mouse_opaque="true"
     name="flycam_indicator"
     tool_tip="Flycam"
     left="0"
     top="1"/>
  </layout_panel>
  <layout_panel
   visibility_control="ShowStatusBarComplexity"
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="av_complexity_lp"
   width="18">
    <icon
     height="18"
     width="18"
     image_name="50_Ton_Weight"
     mouse_opaque="true"
     name="av_complexity"
     left="0"
     top="1"/>
  </layout_panel>
  <layout_panel
   visibility_control="ShowStatusBarFPS"
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="fps_lp"
   width="35">
    <text
     type="string"
     font="SansSerifLarge"
     text_color="FPSTextColor"
     follows="right|top"
     halign="right"
     height="16"
     layout="topleft"
     top="0"
     v_pad="-1"
     left="0"
     name="FPSText"
     tool_tip="Current FPS(Frames Per Second)"
     width="35">
        00.0
    </text>
  </layout_panel>
  <layout_panel
   visibility_control="ShowNetStats"
   auto_resize="false"
   user_resize="false"
   follows="top|right"
   height="18"
   visible="true"
   layout="topleft"
   name="netstats_lp"
   width="20" />
</layout_stack>
</panel>
