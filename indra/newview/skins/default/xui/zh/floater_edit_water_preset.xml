		<slider label="Y" name="WaterWave2DirY"/>
		<text name="DensMultText">
			上折射比例
		</text>
		<text name="WaterScaleBelowText">
			下折射比例
		</text>
		<text name="MaxAltText">
			模糊倍數
		</text>
		<text name="BHText3">
			正常地圖
		</text>
